<?xml version="1.0"?>
<component name="sa.comptechco.nuxeo.common.auth.unrestricted.endpoint">

    <extension point="openUrl"
               target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService">
        <openUrl name="User">
            <grantPattern>${org.nuxeo.ecm.contextPath}/site/user/.*</grantPattern>
        </openUrl>
    </extension>
    <extension target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService" point="loginScreen">
        <loginScreenConfig>
            <startupPages>
                <startupPage id="app_login" priority="999">
                    <path>/app/login</path>
                </startupPage>
            </startupPages>
        </loginScreenConfig>
    </extension>
</component>