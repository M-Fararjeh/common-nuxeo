<?xml version="1.0"?>
<component name="sa.comptechco.nuxeo.common.operations.utils.kafka.NotificationsAction">

    <extension target="org.nuxeo.runtime.stream.service" point="streamProcessor">
        <streamProcessor name="processNotifications"
                         defaultConcurrency="2"
                         defaultPartitions="4"
                         class="sa.comptechco.nuxeo.common.operations.utils.kafka.StreamProcessNotifications">
            <policy name="default"
                    maxRetries="3"
                    delay="1s"
                    maxDelay="10s"
                    continueOnFailure="true"/>
        </streamProcessor>
    </extension>
</component>
